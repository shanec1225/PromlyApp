<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="1000dip" />
            <gradient
            android:type="linear"
            android:angle="0"
            android:startColor="@color/promly_brand_purple"
            android:endColor="@color/promly_gradient_blue"
            />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10000dip" />
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="@color/promly_brand_purple"
                android:endColor="@color/promly_gradient_blue"
                />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="10000dip" />
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="@color/disabled_purple_gradient_left"
                android:endColor="@color/disabled_gradient_right"
                />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="1000dip" />
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="@color/promly_brand_purple"
                android:endColor="@color/promly_gradient_blue"
                />
        </shape>
    </item>
</selector>