<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    >

    <View
        android:id="@+id/view2"
        android:layout_width="393dp"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:alpha="0.4"
        android:background="@drawable/top_purple_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_promly_logo_large" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="47dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <LinearLayout
            android:clickable="true"
            android:id="@+id/continueWithEmailButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/pink_purple_gradient_button"
            android:orientation="horizontal"
            android:onClick="onEmailButtonClicked">

            <ImageView
                android:id="@+id/emailIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_promly_mail_icon" />

            <TextView
                android:id="@+id/emailText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:fontFamily="@font/avenir_ltstd_black"
                android:gravity="center"
                android:lines="1"
                android:text="Continue with Email"
                android:textSize="17sp" />
        </LinearLayout>

        <android.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="8dp" />

        <LinearLayout
            android:id="@+id/continueWithAppleButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/white_button"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/appleIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_promly_apple_icon" />
            <TextView
                android:id="@+id/appleText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:fontFamily="@font/avenir_ltstd_black"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/black"
                android:text="Continue with Apple"
                android:textSize="17sp" />
        </LinearLayout>

        <android.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="8dp" />

        <LinearLayout
            android:id="@+id/continueWithGoogleButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/red_button"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/googleIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_promly_google_icon" />
            <TextView
                android:id="@+id/googleText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:fontFamily="@font/avenir_ltstd_black"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/white"
                android:text="Continue with Google"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>