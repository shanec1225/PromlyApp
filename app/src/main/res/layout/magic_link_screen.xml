<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <View
        android:id="@+id/view2"
        android:layout_width="393dp"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:alpha="0.4"
        android:background="@drawable/top_purple_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:clickable="true"
        android:id="@+id/backToLoginScreenFromMagicLinkScreen"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_promly_navicon_back" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="228sp"
        android:layout_height="40sp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="83dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backToLoginScreenFromMagicLinkScreen"
        app:srcCompat="@drawable/ic_promly_logo_small" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="104dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="47dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="Email Address"
            android:textSize="17sp"
            android:fontFamily="@font/avenir_ltstd_black"
            android:gravity="center"
            android:textColorHint="#60000000"
            android:textColor="@color/black"
            android:background="@drawable/white_button"
            />

        <android.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="8dp" />

        <Button
            android:clickable="true"
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/pink_purple_gradient_button"
            android:text="Send Magic Link"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:fontFamily="@font/avenir_ltstd_black"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>