<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/onlyMeStack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Only Me"
            android:textColor="@color/white"
            android:fontFamily="@font/avenir_ltstd_book"
            android:textSize="12sp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="4dp" />

        <ToggleButton
            android:id="@+id/onlyMeCheck"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:text="off"
            android:textSize="0sp"
            android:onClick="onlyMeToggle"
            android:background="@drawable/promly_check_empty"
            tools:ignore="HardcodedText,UsingOnClickInXml"/>
    </LinearLayout>

    <TextView
        android:id="@+id/setButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/set_goal_button"
        android:textColor="@color/white"
        android:layout_margin="18dp"
        android:textSize="20sp"
        android:paddingVertical="12dp"
        android:paddingHorizontal="53dp"
        android:fontFamily="@font/avenir_ltstd_black"
        android:text="set"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/view2"
        android:layout_width="393dp"
        android:layout_height="630dp"
        android:alpha="0.4"
        android:background="@drawable/top_purple_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="155dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="155dp"
        android:fontFamily="@font/avenir_ltstd_black"
        android:text="1by2day"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/goalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="100dp"
        android:fontFamily="@font/avenir_ltstd_book"
        android:text="Set a bite-sized goal"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pageTitle" />

    <EditText
        android:id="@+id/goalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="32dp"
        android:ems="10"
        android:fontFamily="@font/avenir_ltstd_black"
        android:inputType="text"
        android:textAlignment="center"
        android:hint="just one thing"
        android:textColorHint="#3FAA57FF"
        android:textColor="@color/purple_gradient_left"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goalTitle" />

    <LinearLayout
        android:id="@+id/bottomStack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">


        <TextView
            android:id="@+id/characterCountLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="120 CHARACTERS"
            android:textColor="#3FFFFFFF"
            android:textSize="12sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:id="@+id/suggestionsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="suggestions"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <ScrollView
            android:layout_width="526dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/workoutSuggestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/goal_suggestions"
                    android:fontFamily="@font/avenir_ltstd_black"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="8dp"
                    android:text="workout"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/eatHealthySuggestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/goal_suggestions"
                    android:fontFamily="@font/avenir_ltstd_black"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="8dp"
                    android:text="eat healthy"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/finishABookSuggestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/goal_suggestions"
                    android:fontFamily="@font/avenir_ltstd_black"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="8dp"
                    android:text="finish a book"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/meetSomeoneSuggestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/goal_suggestions"
                    android:fontFamily="@font/avenir_ltstd_black"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="8dp"
                    android:text="meet someone"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/messageAFriendSuggestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/goal_suggestions"
                    android:fontFamily="@font/avenir_ltstd_black"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="8dp"
                    android:text="message a friend"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="16dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </ScrollView>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>